{
  "mcpServers": {
    "mail-mcp": {
      "command": "python",
      "args": ["-c", "import subprocess; import sys; subprocess.check_call([sys.executable, '-m', 'pip', 'install', 'mail-mcp']); from mail_mcp.main import sync_main; sync_main()"],
      "env": {
        "MAIL_IMAP_HOST": "imap.qq.com",
        "MAIL_IMAP_PORT": "993",
        "MAIL_IMAP_USERNAME": "your-email@qq.com",
        "MAIL_IMAP_PASSWORD": "your-app-password",
        "MAIL_IMAP_USE_SSL": "true",
        "MAIL_SMTP_HOST": "smtp.qq.com", 
        "MAIL_SMTP_PORT": "587",
        "MAIL_SMTP_USERNAME": "your-email@qq.com",
        "MAIL_SMTP_PASSWORD": "your-app-password",
        "MAIL_SMTP_USE_TLS": "true"
      }
    }
  }
}